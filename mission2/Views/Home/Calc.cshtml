@{
    ViewData["Title"] = "In Demand: Calculator";
}
@model missions.Models.Grades

<h2>Grade Calculator:</h2>
<form method="post">
    <label for="Assignment">Assignments</label>
    <input asp-for="Assignment" id="Assignment" type="number" /><br />

    <label for="Group_project">Group Project</label>
    <input asp-for="Group_project" id="Group_project" type="number" /><br />

    <label for="Quiz">Quizzes</label>
    <input asp-for="Quiz" id="Quiz" type="number" /><br />

    <label for="Exam">Exams</label>
    <input asp-for="Exam" id="Exam" type="number" /><br />

    <label for="Intex">INTEX</label>
    <input asp-for="Intex" id="Intex" type="number" /><br />

    <input id="Grade_button" type="submit" value="Calculate Grades" />
    <div asp-validation-summary="All"></div>
</form>
